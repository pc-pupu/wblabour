							);
							
		//print_r($inspection_schedule_details);	
		//exit;				
		
		db_insert('ld_inspection_schedule_details')->fields($inspection_schedule_details)->execute(); 
		
		
		$rows[] = array(
					$i,
					$data->est_name,

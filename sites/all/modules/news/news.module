function add_news($form, &$form_state){
   global $base_root, $base_path;
	 
   $form['add_news_date'] = array(
	 '#title'=> 'News Date :',
	 '#type' => 'date',
     '#default_value' => array(
         'month' => format_date(time(), 'custom', 'n'),
